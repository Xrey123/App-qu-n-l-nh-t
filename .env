# ZALO NOTIFICATION CONFIGURATION
# Lấy thông tin từ https://developers.zalo.me/

# Access Token (từ Developer App)
ZALO_ACCESS_TOKEN=your_access_token_here

# OA ID (từ Official Account)
ZALO_OA_ID=your_oa_id_here

# Webhook URL (nếu dùng method đơn giản)
ZALO_WEBHOOK_URL=https://hook.us1.make.com/xxxxxxxx

# Settings
ZALO_NOTIFICATION_ENABLED=true
ZALO_NOTIFICATION_THRESHOLD=-100000
ZALO_NOTIFICATION_TIME=09:00
